{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es5", "es2015.promise"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "outDir": "."
    },
    "exclude": [
        "node_modules",
        "test/**/*"
    ],
    "include": [
        "./**/*"
    ]
}
